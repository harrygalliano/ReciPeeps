 <% if flash[:danger] %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= flash[:danger] %>
      </div>
    </div>
  <% end %>

<h1>Create your recipe!</h1>


<%= form_for @recipe, url: {action: "create"}, html: {class: "new-recipe-form"} do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :description %>
  <%= f.file_field :image %>
  <%= f.time_field :preparation_time %>
  <%= f.number_field :servings %>
  <%= f.submit "Create" %>
<% end %>


