  <% if flash[:danger] %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= flash[:danger] %>
      </div>
    </div>
  <% end %>

<h1>Recipes</h1>

<div class="recipe-card-container">
  <% @recipes.each do |recipe| %>
    <div id="recipe_<%= recipe.id %>" class="recipe">

      <div class="recipe-card">
        <div class="recipe-card-header">
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image, class: "recipe_image_index", :size => "400x350" %>
              <% end %>

              <% pre_like = recipe.likes.find { |like| like.user_id == current_user.id} %>
              <% if pre_like %>

                <%= link_to raw("<i class=\"far fa-heart\"></i>"), recipe_like_path(recipe, pre_like), method: :delete, class: "recipe-card-liked-button" %>
              <% else %>
                <%= link_to raw("<i class=\"fas fa-heart-broken\"></i>"), recipe_likes_path(recipe), method: :post, class: "recipe-card-unliked-button" %>
              <% end %>
            </div>
        </div>
        <div class="recipe-card-title">
            <h1 class="recipe-card-title-container">
              <a><%= recipe.name %></a>
            </h1>
            <i class="fa fa-clock-o"> 15 Mins</i>
            <i class="fa fa-users"> Serves 2</i>

            <div class="recipe-card-rating">
              <li>
                  <a href="#"><i class="fas fa-star"></i></a>
                  <a href="#"><i class="fas fa-star"></i></a>
                  <a href="#"><i class="fas fa-star"></i></a>
                  <a href="#"><i class="fas fa-star"></i></a>
                  <a href="#"><i class="far fa-star"></i></a>
              </li>
            </div>
          <p class="recipe-card-description"><%= recipe.description %></p>
        </div>
        <a href="/recipes/<%= recipe.id %>" class="recipe-card-cook-btn">Let's Cook!</a>
      </div>
    </div>
  <% end %>
</div>

<div class="pagination_box">
  <div class="pagination_info">
    <%= page_entries_info @recipes %>
  </div>
  <div class="pagination_links">
    <%= will_paginate @recipes, :container => false, link_separator: ' - ' %>
  </div>
</div>
