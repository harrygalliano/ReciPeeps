<div class="loginregister-background">
  <% provide(:title, 'Sign up') %>

  <div class="loginregister-container">

    <h1 class="loginregister-header-text">Sign up</h1>
    <div class="container">
      <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <div class ="row">
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
      </div><br>
      <div class ="row">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
      </div><br>
      <div class ="row">
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
      </div><br>

      <div class ="row">
        <%= f.password_field :password_confirmation, placeholder: '... And again pls', class: 'form-control' %>
      </div><br>
        <%= f.submit "Create my account", class: "loginregister-button" %>
      <% end %>
    </div>
  </div>
</div>